/* components/SearchInput/SearchInput.wxss */
.main{
  width: 96%;
  display: flex;
  justify-content: space-between;
  height: 70rpx;
  border: 2px solid #f40;
  border-radius: 50rpx;
  padding-left: 15rpx;
  margin: 0 auto;
  background-color: #fff;
}
.input{
  /* display: block; */
  width: 90%;
  display:flex;
  padding: 10rpx 20rpx;

}

.input image{
  width: 30rpx;
  height: auto;
  margin-left:10rpx ;
  margin-right: 15rpx;
}
.input.placeholder-class{
  color: #ccc;
  font-size: 25rpx;
  text-align: left;
}
.search{
  width: 120rpx;
  height: 100%;
  text-align: center;
  line-height: 2;
  color: #fff;
  background-color: #f50;
  border-radius: 40rpx;
}