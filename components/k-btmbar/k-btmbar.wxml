<!--components/k-btmbar/k-btmbar.wxml-->
<view class="btmbar">
  <view class="left">
    <view class="kefu" open-type="contact">
      <text class="iconfont icon-kefu"></text>
      <view class="iconTitle">客服</view>
      <button open-type="contact"></button>
    </view>
    <view class="fenxiang">
      <text class="iconfont icon-fenxiang"></text>
      <view class="iconTitle">分享</view>
      <button open-type="share"></button>
    </view>
    <navigator class="cart" url="/pages/cart/index" open-type="switchTab">
      <text class="iconfont icon-gouwuche"></text>
      <view class="iconTitle">购物车</view>
    </navigator>
  </view>
  <view class="right">
    <view class="addcart" bindtap="addCart">加入购物车</view>
    <view class="buy" bindtap="getpay">立即购买</view>
  </view>
</view>
