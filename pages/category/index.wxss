/* pages/category/index.wxss */

.category{
  display: flex;
}
.cate-left{
  flex: 2;
  background-color: #f5f5f5;
  height: calc(100vh - 100rpx);
  padding-right: 10rpx;
}
.cate-left view{
  text-align: center;
  height: 80rpx;
  font-size: 30rpx;
  line-height: 80rpx;
}
.active{
  border-left: 2px solid #f40;
  color: red;
}
.cate-right{
  flex: 5;
  background-color: #fff;
  height: calc(100vh - 100rpx);
  padding-left:10rpx;
  display: flex;
  flex-wrap: wrap;
}