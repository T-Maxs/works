/* pages/goods-list/goods-item/goods-item.wxss */
.goods-item{
  display: flex;
  margin: 10rpx 0;
}
.goods-left{
  flex: 2;
  padding: 0 30rpx;
}
.goods-left image{
  width: 100%;
  height: 200rpx;
}
.goods-right{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}
.goods-right .title{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods-right .price{
  color: red;
  padding-bottom: 10rpx;
}